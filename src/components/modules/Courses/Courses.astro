---
import CourseCard from "@ui/courseCard/courseCard.astro";
import "./Courses.css";
import SectionHeader from "@nanoModules/sectionHeader/sectionHeader.astro";
---

<section id="Courses" class="section">

  <SectionHeader
  heading = "Technical Courses"
   paragraph = "Expand your skills with our industry-leading courses taught by experienced professionals."
 />


  <div class="course-grid">
    <CourseCard
      title="Introduction to Robotics Engineering"
      level="Beginner"
      duration="8 weeks"
      topics={["Mechanical Design", "Control Systems", "Sensor Integration"]}
      learnMoreUrl="/courses/robotics"
      enrollUrl="/enroll/robotics"
    />
  
    <CourseCard
      title="AI for Everyone"
      level="Intermediate"
      duration="6 weeks"
      topics={["Machine Learning", "Neural Networks", "Python"]}
      learnMoreUrl="/courses/ai"
      enrollUrl="/enroll/ai"
    />
  
    <CourseCard
      title="Advanced Control Systems"
      level="Advanced"
      duration="10 weeks"
      topics={["PID Tuning", "State Estimation", "Feedback Loops"]}
      learnMoreUrl="/courses/control"
      enrollUrl="/enroll/control"
    />
    <CourseCard
    title="Advanced Control Systems"
    level="Advanced"
    duration="10 weeks"
    topics={["PID Tuning", "State Estimation", "Feedback Loops"]}
    learnMoreUrl="/courses/control"
    enrollUrl="/enroll/control"
  />
  </div>
  
</section>


  
  