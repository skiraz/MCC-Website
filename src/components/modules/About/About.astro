---
import "./About.css";
import Card from "@ui/Card/Card.astro";
import SectionHeader from "@nanoModules/sectionHeader/sectionHeader.astro";
import Buttons from "@nanoModules/buttons/buttons.astro";
---

<section id="About" class="section">
  <SectionHeader
    heading= "Powering The Future With <br> Technology"
    paragraph=" Pioneering advancements in robotics and artificial intelligence to solve tomorrow's <br> challenges today."
  />
  <div class = "About-buttons">
    <Buttons text="Learn more" type = "btn-filled" />
    <Buttons text="Enroll now" type = "btn-outline" />
  </div>
    <div class="About-Cards">
      <Card
        icon="/assets/img/aiBrain.svg"
        title="AI Solutions"
        description="Intelligent software solutions built with advanced algorithms"
      />
      <Card
        icon="/assets/img/robot2.svg"
        title="Advanced Robotics"
        description="Cutting-edge robotic systems for industrial automation"
      />
      <Card
        icon="/assets/img/consult1.svg"
        title="Expert Consultation"
        description="Strategic technology guidance from industry experts"
      />
    </div>
  </SectionHeader>
</section>
